{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "time-tracker",
  "title": "Time Tracker",
  "description": "Simple manual time tracking with local JSON storage",
  "icon": "command-icon.png",
  "author": "julien-microfacto",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "dataPath",
      "title": "Data File Path",
      "description": "Custom path for data.json (leave empty to auto-detect: Google Drive, Dropbox, iCloud, or ~/Documents)",
      "type": "textfield",
      "required": false,
      "placeholder": "~/Documents/TimeTrack/data.json"
    },
    {
      "name": "dateFormat",
      "title": "Date Format",
      "description": "How dates are displayed in the interface",
      "type": "dropdown",
      "required": false,
      "default": "MMM dd, yyyy",
      "data": [
        {
          "title": "Jan 05, 2025 (MMM dd, yyyy)",
          "value": "MMM dd, yyyy"
        },
        {
          "title": "05/01/2025 (dd/MM/yyyy)",
          "value": "dd/MM/yyyy"
        },
        {
          "title": "01/05/2025 (MM/dd/yyyy)",
          "value": "MM/dd/yyyy"
        },
        {
          "title": "2025-01-05 (yyyy-MM-dd)",
          "value": "yyyy-MM-dd"
        }
      ]
    },
    {
      "name": "defaultColor",
      "title": "Default Project Color",
      "description": "Color for new projects",
      "type": "dropdown",
      "required": false,
      "default": "#3B82F6",
      "data": [
        {
          "title": "ðŸ”´ Red",
          "value": "#EF4444"
        },
        {
          "title": "ðŸŸ  Orange",
          "value": "#F97316"
        },
        {
          "title": "ðŸŸ¡ Yellow",
          "value": "#EAB308"
        },
        {
          "title": "ðŸŸ¢ Green",
          "value": "#22C55E"
        },
        {
          "title": "ðŸ”µ Blue (Default)",
          "value": "#3B82F6"
        },
        {
          "title": "ðŸŸ£ Purple",
          "value": "#8B5CF6"
        },
        {
          "title": "ðŸ©· Pink",
          "value": "#EC4899"
        }
      ]
    }
  ],
  "commands": [
    {
      "name": "log-time",
      "title": "Log Time",
      "description": "Quickly log time spent on a project",
      "mode": "view"
    },
    {
      "name": "view-entries",
      "title": "View Time Entries",
      "description": "View and manage your time entries",
      "mode": "view"
    },
    {
      "name": "manage-projects",
      "title": "Manage Projects",
      "description": "Add, edit, and archive projects",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.65.0",
    "@raycast/utils": "^2.2.2",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.1.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "eslint": "^9.39.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "generate-icon": "node scripts/generate-icon.js"
  }
}
